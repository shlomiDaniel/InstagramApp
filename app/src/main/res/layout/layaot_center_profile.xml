<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
        <include layout="@layout/top_profile_bar"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:id="@+id/relayout1"
            >


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"

            >

            <LinearLayout
                android:id="@+id/linLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_alignParentTop="true"

                    android:layout_marginTop="50dp"
                    android:layout_weight="25" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="175dp"
                    android:id="@+id/profile_photo"
                    android:layout_marginTop="15dp"

                    />

                <TextView
                    android:id="@+id/usernameid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="55dp"
                    android:hint="Name" />

                <TextView
                    android:id="@+id/email_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-50dp"
                    android:layout_marginTop="75dp"
                    android:hint="      email"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="website"
                    android:width="100dp"
                    android:height="100dp"
                    android:layout_marginLeft="-50dp"
                    android:layout_marginTop="120dp"
                    android:textSize="20dp"
                    android:id="@+id/websiteid"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="description"
                    android:layout_marginLeft="-100dp"
                    android:layout_marginTop="140dp"
                    android:width="100dp"
                    android:height="100dp"
                    android:textSize="20dp"
                    android:id="@+id/dicriptionid"
                    />

                <Button
                    android:id="@+id/editProfileButtonid"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="75dp"
                    android:hint="Edit Profile"

                    />


            </LinearLayout>

        </RelativeLayout>

        <GridView
            android:id="@+id/gridView"
            android:layout_width="415dp"

            android:layout_height="wrap_content"
            android:layout_marginTop="189dp"
            android:layout_marginRight="550dp"
            android:gravity="center"
            android:horizontalSpacing="1dp"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:verticalSpacing="1dp">

        </GridView>
    </RelativeLayout>
</merge>
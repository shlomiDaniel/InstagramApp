<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:id="@+id/relayout1"
    >

    <include layout="@layout/top_comment_tool_bar"></include>

</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relayout2"
        android:layout_below="@id/relayout1"

        android:layout_marginBottom="50dp"

        >
<include layout="@layout/layout_comment"></include>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listViewComments"
            android:layout_marginTop="75dp"
            ></ListView>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/relayout3"
        android:layout_alignParentBottom="true"
        android:background="@color/grey"

        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="5dp"
            android:hint="Add a comment"
            android:textSize="22sp"
            android:id="@+id/comment"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_save_setting"
            android:id="@+id/postComment"
            android:layout_alignParentRight="true"

            />

    </RelativeLayout>

</RelativeLayout>